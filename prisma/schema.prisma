generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Page {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  contentJson String?  // Stores raw JSON from builder
  sections    Section[]
}

model Section {
  id        String   @id @default(cuid())
  type      String
  content   String
  order     Int
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  
  @@index([pageId])
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   // JSON string
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  
  // Relation to Role
  roleId    String?
  role      Role?    @relation(fields: [roleId], references: [id])
  
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String       @id @default(cuid())
  name        String       @unique // e.g., "Yönetici", "Editör"
  description String?
  permissions Permission[] // Implicit many-to-many
  users       User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Permission {
  id          String   @id @default(cuid())
  slug        String   @unique // e.g., "manage_users", "view_dashboard"
  name        String
  description String?
  roles       Role[]   // Implicit many-to-many
}

model ContactForm {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  fileData  String?  // Base64 encoded file
  fileName  String?
  status    String   @default("pending") // pending, read, replied
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Blog {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String
  image       String?
  author      String?
  tags        String[]
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id    String @id @default(cuid())
  name  String
  slug  String @unique
  color String
  blogs Blog[]
}

model Analytics {
  id          String   @id @default(cuid())
  totalVisits Int      @default(0)
  updatedAt   DateTime @updatedAt
}
